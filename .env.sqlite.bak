#####################################################################
# ⚙️ VANNA AI AGENT - PRODUCTION CONFIGURATION FILE
#
# This file defines environment variables used by app/config.py to
# set up the server, database connections, and LLM providers.
#####################################################################


# ============================================================
# 1. SERVER CONFIGURATION
# ============================================================
# HOST: The IP address the server will bind to. 
#   Accepted Values: 0.0.0.0 (recommended for local/network access), 127.0.0.1 (localhost only)
HOST=0.0.0.0
# APP_PORT / GATEWAY_PORT enforce strict ports (Phase 4.E)
APP_PORT=7777
GATEWAY_PORT=7770
# PORT retained for compatibility but pinned to APP_PORT
PORT=7777
# DEBUG: Enables Uvicorn/FastAPI debug mode. Use 'true' for development.
#   Accepted Values: true | false
DEBUG=true
# WORKERS: Number of Uvicorn worker processes. Use 1 for development/debugging.
#   Accepted Values: 1, 2, 4, etc. (typically tied to CPU core count for production)
WORKERS=1


# ============================================================
# 2. DATABASE CONFIGURATION
# ============================================================
# DB_PROVIDER: Selects the active SQL Runner (SqliteRunner, OracleRunner, etc.)
#   Accepted Values: sqlite | oracle | mssql
DB_PROVIDER=sqlite

# ----------------- SQLite (Used if DB_PROVIDER=sqlite) -----------------
# SQLITE_DB: Local path to the SQLite database file.
SQLITE_DB=D:\mydb.db

# ----------------- Oracle (Used if DB_PROVIDER=oracle) -----------------
# DB_ORACLE_DSN: Connection string for Oracle (e.g., user/password@host:port/service)
DB_ORACLE_DSN=your_user/your_password@your_host:1521/your_service

# ----------------- MSSQL (Used if DB_PROVIDER=mssql) -----------------
# DB_MSSQL_CONN: ODBC Connection string for MSSQL
DB_MSSQL_CONN=DRIVER={ODBC Driver 17 for SQL Server};SERVER=localhost;DATABASE=master;UID=sa;PWD=Password123


# ============================================================
# 3. LLM CONFIGURATION
# ============================================================
# LLM_PROVIDER: Selects the active Large Language Model provider.
#   Accepted Values: lmstudio | openai | groq | gemini
LLM_PROVIDER=lmstudio

# ----------------- LM Studio (Used if LLM_PROVIDER=lmstudio) -----------------
LM_STUDIO_URL=http://10.10.10.1:1234/v1
LM_STUDIO_MODEL=gemma-3n

# ----------------- OpenAI (Used if LLM_PROVIDER=openai) -----------------
OPENAI_API_KEY=YOUR_OPENAI_KEY
OPENAI_MODEL=gpt-4-turbo

# ----------------- Groq (Used if LLM_PROVIDER=groq) -----------------
GROQ_API_KEY=YOUR_GROQ_KEY
GROQ_MODEL=mixtral-8x7b-32768

# ----------------- Google Gemini (Used if LLM_PROVIDER=gemini) -----------------
GEMINI_API_KEY=YOUR_GEMINI_KEY
GEMINI_MODEL=gemini-pro


# ============================================================
# 4. AGENT MEMORY CONFIGURATION
# ============================================================
# AGENT_MEMORY_MAX_ITEMS: Maximum number of items in the agent memory (primarily used if falling back to DemoAgentMemory).
AGENT_MEMORY_MAX_ITEMS=1000
